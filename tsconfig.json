{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.buildcache/info.tsbuildinfo",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src", // this needs to be changed during test
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": ["src"]
}
